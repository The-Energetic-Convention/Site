@{
    ViewData["Title"] = "TEC API";
}
<head>
    <link rel="stylesheet" type="text/css" href="assets/css/style.css">
    <script src="assets/js/main.js" type="text/javascript"></script>
</head>

<div class="text-center">
    <div class="model-container"></div>
    <div class="content">
        <div class="box clearfix" style="flex: auto; flex-direction: column">
            <div class="sidebar">
                <div class="section-box">
                    <div class="section-header">
                        Overview
                    </div>
                    <ul>
                        <li><a href="@Program.domain.Replace("thenergeticon", "api.thenergeticon")">Getting Started</a></li>
                    </ul>
                </div>
                <div class="section-box">
                    <div class="section-header">
                        <a href="#!/EventsApi">EventsApi</a>
                    </div>
                    <ul>
                        <li><a href="#!/EventsApi#currentevent">currentevent</a></li>
                        <li><a href="#!/EventsApi#event">event</a></li>
                        <li><a href="#!/EventsApi#events">events</a></li>
                    </ul>
                </div>
                <div class="section-box">
                    <div class="section-header">
                        <a href="#!/HomeApi">HomeApi</a>
                    </div>
                    <ul>
                        <li><a href="#!/HomeApi#privacy">privacy</a></li>
                        <li><a href="#!/HomeApi#terms">terms</a></li>
                    </ul>
                </div>
                <div class="section-box">
                    <div class="section-header">
                        <a href="#!/UsersApi">UsersApi</a>
                    </div>
                    <ul>
                        <li><a href="#!/UsersApi#login">login</a></li>
                        <li><a href="#!/UsersApi#logout">logout</a></li>
                        <li><a href="#!/UsersApi#me">me</a></li>
                        <li><a href="#!/UsersApi#user">user</a></li>
                    </ul>
                </div>
            </div>
            <div class="non-sidebar">
                <div class="main-content">
                    <h2>Getting Started</h2>
                    <p>To begin using the HTTP API, click on an option on the left.</p>
                    <p>Follow the URL in pink for an endpoint.</p>
                    <p>Follow any other information given to correctly use the API.</p>
                    <p>Use Insomnia to play around with the API.</p>
                </div>
            </div>
        </div>
    </div>
</div>
